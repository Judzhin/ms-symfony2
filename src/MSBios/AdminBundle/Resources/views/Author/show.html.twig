{% extends '@Admin/layout.html.twig' %}

{% block breadcrumb %}

    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-lg-10">
            <h2>{{ entity.name }}</h2>
            <ol class="breadcrumb">
                <li>
                    <a href="/">Home</a>
                </li>
                <li>
                    <a href="/admin">Dashboard</a>
                </li>
                <li>
                    <a href="/admin">Author list</a>
                </li>
                <li class="active">
                    <strong>{{ entity.name }}</strong>
                </li>
            </ol>
        </div>
        <div class="col-lg-2">

        </div>
    </div>

{% endblock %}

{% block content -%}

    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Author <small>preview data</small></h5>
                </div>
                <div class="ibox-content">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Id</label>
                            <div class="col-sm-10">
                                <div class="form-control">
                                    {{ entity.id }}
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Name</label>
                            <div class="col-sm-10">
                                <div class="form-control">
                                    {{ entity.name }}
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Slug</label>
                            <div class="col-sm-10">
                                <div class="form-control">
                                    {{ entity.slug }}
                                </div>
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group">
                            <div class="col-sm-4 col-sm-offset-2">
                                <a href="{{ path('msbios_admin_author_index') }}"
                                   class="btn btn-white">
                                    Back to the list
                                </a>
                                <a href="{{ path('msbios_admin_author_edit', { 'id': entity.id }) }}"
                                   class="btn btn-white">
                                    Edit
                                </a>
                                {{ form(delete_form) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</ul>
{% endblock %}

{% block javascripts %}
    <!-- Mainly scripts -->
    <script src="{{ asset('bundles/admin/assets/js/jquery-2.1.1.js') }}"></script>
    <script src="{{ asset('bundles/admin/assets/js/bootstrap.min.js') }}"></script>
    <script src="{{ asset('bundles/admin/assets/js/plugins/metisMenu/jquery.metisMenu.js') }}"></script>
    <script src="{{ asset('bundles/admin/assets/js/plugins/slimscroll/jquery.slimscroll.min.js') }}"></script>

    <!-- Peity -->
    <script src="{{ asset('bundles/admin/assets/js/plugins/peity/jquery.peity.min.js') }}"></script>

    <!-- Custom and plugin javascript -->
    <script src="{{ asset('bundles/admin/assets/js/inspinia.js') }}"></script>
    <script src="{{ asset('bundles/admin/assets/js/plugins/pace/pace.min.js') }}"></script>

    <!-- iCheck -->
    <script src="{{ asset('bundles/admin/assets/js/plugins/iCheck/icheck.min.js') }}"></script>

    <!-- Peity -->
    <script src="{{ asset('bundles/admin/assets/js/demo/peity-demo.js') }}"></script>

    <script>
        $(document).ready(function () {
            $('.i-checks').iCheck({
                checkboxClass: 'icheckbox_square-green',
                radioClass: 'iradio_square-green',
            });
        });
    </script>
{% endblock %}