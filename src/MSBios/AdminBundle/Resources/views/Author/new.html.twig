{% extends '@Admin/layout.html.twig' %}

{% block breadcrumb %}

    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-lg-10">
            <h2>{{ entity.name }}</h2>
            <ol class="breadcrumb">
                <li>
                    <a href="{{ path('msbios_blog_post_index') }}">Home</a>
                </li>
                <li>
                    <a href="/admin">Dashboard</a>
                </li>
                <li>
                    <a href="{{ path('msbios_admin_author_index') }}">Author list</a>
                </li>
                <li class="active">
                    <strong>Create author</strong>
                </li>
            </ol>
        </div>
        <div class="col-lg-2">

        </div>
    </div>

{% endblock %}

{% block content -%}

    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Author <small>create data</small></h5>
                </div>
                <div class="ibox-content">

                    {{ form_start(form, {attr: {class: "form-horizontal"}}) }}
                    {{ form_errors(form) }}
                    <div class="form-group">
                        {{ form_label(form.name, null, {label_attr: {class: 'col-sm-2 control-label'}}) }}
                        <div class="col-sm-10">
                            {{ form_widget(form.name, {attr: {class:"form-control"}}) }}
                        </div>
                    </div>

                    <div class="hr-line-dashed"></div>
                    <div class="form-group">
                        <div class="col-sm-4 col-sm-offset-2">
                            <a href="{{ path('msbios_admin_author_index') }}"
                               class="btn btn-link">
                                Back to the list
                            </a>
                            {{ form_widget(form.submit, {attr:{class:'btn btn-white'}}) }}
                        </div>
                    </div>

                    {{ form_end(form) }}

                </div>
            </div>
        </div>
    </div>

{% endblock %}