{% extends "::base.html.twig" %}

{% block stylesheets %}
    <link href="{{ asset('bundles/blog/css/main.css') }}" media="screen" rel="stylesheet" type="text/css"/>
{% endblock %}

{% block body %}
    <header>
        <p>Symfony 2 blog</p>
        <nav>
            <ul>
                <li>
                    <a href="#">{{ 'home' | trans }}</a>
                </li>
            </ul>
        </nav>
    </header>

    {% block sidebar %}{% endblock %}

    <section>
        {% block section %}{% endblock %}
    </section>

    <footer>
        <p>&copy; {{ 'now' | date('Y') }} Symfony 2 blog</p>
    </footer>

{% endblock %}